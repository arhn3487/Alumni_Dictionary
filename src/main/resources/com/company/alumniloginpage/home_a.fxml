<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.company.alumniloginpage.Controller">
    <ComboBox fx:id="yearComboBox" layoutX="50.0" layoutY="50.0" promptText="Select Year" />
    <ComboBox fx:id="batchComboBox" layoutX="50.0" layoutY="100.0" promptText="Select Batch" />
    <TextField fx:id="subjectField" layoutX="50.0" layoutY="150.0" promptText="Enter Subject" />
    <TextField fx:id="messageField" layoutX="50.0" layoutY="200.0" promptText="Enter Message" />
    <Button fx:id="attachmentButton" layoutX="50.0" layoutY="250.0" onAction="#handleAttachment" text="Attach File" />
    <Button fx:id="sendButton" layoutX="50.0" layoutY="300.0" onAction="#sendEmail" text="Send Broadcast" />
</AnchorPane>
