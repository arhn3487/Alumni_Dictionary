<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.company.alumniloginpage.JobPostsController">
    <stylesheets>
        <!-- <URL value="@styles.css" /> -->
        <URL value="@home.css" />
    </stylesheets>

    <!-- Title -->
    <Label layoutX="20.0" layoutY="20.0" text="Job Posts" style="-fx-font-size: 24; -fx-font-weight: bold;" />

    <!-- Job ID -->
    <Label layoutX="20.0" layoutY="70.0" text="Job ID:" />
    <TextField fx:id="jobIdField" layoutX="100.0" layoutY="65.0" promptText="Enter Job ID" />

    <!-- Job Title -->
    <Label layoutX="20.0" layoutY="110.0" text="Title:" />
    <TextField fx:id="titleField" layoutX="100.0" layoutY="105.0" promptText="Enter Job Title" />

    <!-- Job Description -->
    <Label layoutX="20.0" layoutY="150.0" text="Description:" />
    <TextArea fx:id="descriptionField" layoutX="100.0" layoutY="145.0" prefHeight="100.0" prefWidth="300.0" promptText="Enter Job Description" />

    <!-- Company -->
    <Label layoutX="20.0" layoutY="270.0" text="Company:" />
    <TextField fx:id="companyField" layoutX="100.0" layoutY="265.0" promptText="Enter Company Name" />

    <!-- Location -->
    <Label layoutX="20.0" layoutY="310.0" text="Location:" />
    <TextField fx:id="locationField" layoutX="100.0" layoutY="305.0" promptText="Enter Job Location" />

    <!-- Posted Date -->
    <Label layoutX="20.0" layoutY="350.0" text="Posted Date:" />
    <TextField fx:id="postedDateField" layoutX="100.0" layoutY="345.0" promptText="Enter Posted Date" />

    <!-- Add Job Button -->
    <Button fx:id="addJobButton" layoutX="20.0" layoutY="400.0" text="Add Job" onAction="#handleAddJob" />

    <!-- Delete Job Button -->
    <Button fx:id="deleteJobButton" layoutX="120.0" layoutY="400.0" text="Delete Job" onAction="#handleDeleteJob" />

    <!-- Modify Job Button -->
    <Button fx:id="modifyJobButton" layoutX="220.0" layoutY="400.0" text="Modify Job" onAction="#handleModifyJob" />
</AnchorPane>